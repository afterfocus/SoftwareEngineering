<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="navigator.controller.TablesController">
    <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Tab text="Водители">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="driverTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addDriverButton" text="Добавить водителя" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10" />
                <Button fx:id="deleteDriverButton" layoutX="230.0" prefHeight="30" prefWidth="200" text="Удалить водителя" AnchorPane.bottomAnchor="10" />
            </AnchorPane>
        </Tab>
        <Tab text="Автомобили">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="carTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addCarButton" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Добавить автомобиль" />
                <Button fx:id="deleteCarButton" layoutX="230.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10" text="Удалить автомобиль" />
            </AnchorPane>
        </Tab>
        <Tab text="Виды топлива">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="fuelTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addFuelButton" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Добавить топливо" />
                <Button fx:id="deleteFuelButton" layoutX="230.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10" text="Удалить топливо" />
            </AnchorPane>
        </Tab>
        <Tab text="Названия улиц">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="streetTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addStreetButton" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Добавить название" />
                <Button fx:id="deleteStreetButton" layoutX="230.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Удалить название" />
            </AnchorPane>
        </Tab>
        <Tab text="Тип покрытия">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="surfaceTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addSurfaceButton" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  mnemonicParsing="false" text="Добавить покрытие" />
                <Button fx:id="deleteSurfaceButton" layoutX="230.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Удалить покрытие" />
            </AnchorPane>
        </Tab>
        <Tab text="Водитель - Автомобиль">
            <AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                <TableView fx:id="driverCarTableView" editable="true" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button fx:id="addDriverCarButton" defaultButton="true" layoutX="15.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  mnemonicParsing="false" text="Добавить связь" />
                <Button fx:id="deleteDriverCarButton" layoutX="230.0" prefHeight="30" prefWidth="200" AnchorPane.bottomAnchor="10"  text="Удалить связь" />
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>
