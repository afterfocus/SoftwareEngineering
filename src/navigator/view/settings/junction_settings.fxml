<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="junctionSettings"
            fx:controller="navigator.controller.settings.JunctionSettingsController"
            prefHeight="175.0" prefWidth="210.0" style="-fx-background-color: #FFFFFF;" visible="false">

        <effect><DropShadow /></effect>

        <Label alignment="CENTER" prefHeight="31.0" prefWidth="180.0" style="-fx-background-color: #e0e0e0;" text="Параметры перекрёстка" />
        <Button fx:id="closeButton" layoutX="180.0" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #FF0000DD; -fx-background-radius: 0.0;" text="Х" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <CheckBox fx:id="trafficLightsCheckBox" contentDisplay="RIGHT" layoutX="14.0" layoutY="44.0" nodeOrientation="RIGHT_TO_LEFT" text="Светофор       " />

        <Label layoutX="14.0" layoutY="78.0" text="Красная фаза" />
        <Spinner fx:id="redPhaseSpinner" editable="true" initialValue="0" layoutX="112.0" layoutY="73.0" prefHeight="27.0" prefWidth="67.0" />
        <Label layoutX="185.0" layoutY="78.0" text="с" />

        <Label layoutX="14.0" layoutY="112.0" text="Зелёная фаза" />
        <Spinner fx:id="greenPhaseSpinner" editable="true" initialValue="0" layoutX="112.0" layoutY="107.0" prefHeight="27.0" prefWidth="67.0" />
        <Label layoutX="185.0" layoutY="112.0" text="с" />

        <Button onMouseClicked="#save" layoutY="147.0" prefHeight="27.0" prefWidth="105.0" style="-fx-background-color: #00DD00DD; -fx-background-radius: 0.0;" text="Сохранить" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button onMouseClicked="#delete" layoutX="105.0" layoutY="147.0" prefHeight="27.0" prefWidth="105.0" style="-fx-background-color: #FF0000DD; -fx-background-radius: 0.0;" text="Удалить" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

</AnchorPane>
