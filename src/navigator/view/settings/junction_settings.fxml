<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="junctionSettings" prefHeight="175.0" prefWidth="210.0" style="-fx-background-color: #FFFFFF;" visible="false" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="navigator.controller.settings.JunctionSettingsController">

        <effect><DropShadow /></effect>

        <Label alignment="CENTER" prefHeight="31.0" prefWidth="180.0" style="-fx-background-color: #e0e0e0;" text="Параметры перекрёстка" />
        <Button fx:id="closeButton" layoutX="180.0" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #FF0000DD; -fx-background-radius: 0.0;" text="Х" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <CheckBox fx:id="trafficLightsCheckBox" contentDisplay="RIGHT" layoutX="14.0" layoutY="44.0" nodeOrientation="RIGHT_TO_LEFT" text="Светофор       " />

        <Label layoutX="14.0" layoutY="78.0" text="Красная фаза" />
        <Spinner fx:id="redPhaseSpinner" initialValue="0" layoutX="112.0" layoutY="73.0" prefHeight="27.0" prefWidth="67.0" />
        <Label layoutX="185.0" layoutY="78.0" text="с" />

        <Label layoutX="14.0" layoutY="112.0" text="Зелёная фаза" />
        <Spinner fx:id="greenPhaseSpinner" initialValue="0" layoutX="112.0" layoutY="107.0" prefHeight="27.0" prefWidth="67.0" />
        <Label layoutX="185.0" layoutY="112.0" text="с" />

        <Button layoutY="147.0" onMouseClicked="#save" prefHeight="27.0" prefWidth="105.0" style="-fx-background-color: #00DD00DD; -fx-background-radius: 0.0;" text="Сохранить" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button layoutX="105.0" layoutY="147.0" onMouseClicked="#delete" prefHeight="27.0" prefWidth="105.0" style="-fx-background-color: #FF0000DD; -fx-background-radius: 0.0;" text="Удалить" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

</AnchorPane>
